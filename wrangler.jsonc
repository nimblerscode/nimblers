{
  "$schema": "node_modules/wrangler/config-schema.json",

  "name": "nimblers-gateway",

  "main": "src/infrastructure/cloudflare/worker.ts",

  "compatibility_date": "2024-09-23",
  "compatibility_flags": ["nodejs_compat"],

  "assets": {
    "binding": "ASSETS",
    "directory": "public"
  },

  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "nimblers-registry",
      "database_id": "51180a5e-41bb-4d5d-9a32-b5bf472d431d",
      "migrations_dir": "drizzle/gateway"
    }
  ],
  "durable_objects": {
    "bindings": [
      {
        "name": "ORG_DO",
        "class_name": "OrganizationDurableObject"
      },
      {
        "name": "SHOPIFY_OAUTH_DO",
        "class_name": "ShopifyOAuthDurableObject"
      },
      {
        "name": "CONVERSATION_DO",
        "class_name": "ConversationDurableObject"
      },
      {
        "name": "CONVERSATION_AGENT",
        "class_name": "ConversationAgent"
      }
    ]
  },
  "migrations": [
    {
      "tag": "v1",
      "new_sqlite_classes": [
        "ShopifyOAuthDurableObject",
        "OrganizationDurableObject"
      ]
    },
    {
      "tag": "v2",
      "new_sqlite_classes": ["ConversationDurableObject"]
    },
    {
      "tag": "v3",
      "new_sqlite_classes": ["ConversationAgent"]
    }
  ],

  "rules": [
    {
      "type": "Text",
      "globs": ["**/*.sql"],
      "fallthrough": true
    }
  ],

  "observability": {
    "enabled": true,
    "logs": {
      "invocation_logs": true,
      "head_sampling_rate": 1.0
    }
  },

  "vars": {
    "SESSION_SECRET": "p757FAw8BL7gRwhF_bi4F",
    "ENVIRONMENT": "development",
    "SHOPIFY_WEBHOOK_SECRET": "7d6c7135aff1ed2b8962541c0462b8ca",
    "SHOPIFY_CLIENT_ID": "f665ecacb8ebb0109bd7994468b79d14",
    "SHOPIFY_CLIENT_SECRET": "7d6c7135aff1ed2b8962541c0462b8ca",
    "DEV_TUNNEL_URL": "https://fence-enlargement-submission-protective.trycloudflare.com",
    "RESEND_API_KEY": "XXXX",
    "HONEYCOMB_API_KEY": "0YQfTrWYee6qkrNyHUcEBV",
    "HONEYCOMB_DATASET": "nimblers",
    "OTEL_SERVICE_NAME": "nimblers-worker",
    "OTEL_SERVICE_VERSION": "1.0.0",
    "OTEL_EXPORTER_OTLP_ENDPOINT": "https://api.honeycomb.io/v1/traces",
    "OTEL_EXPORTER_OTLP_HEADERS": "x-honeycomb-team=0YQfTrWYee6qkrNyHUcEBV",

    // === Twilio Messaging Configuration ===
    "TWILIO_ACCOUNT_SID": "XXXX",
    "TWILIO_AUTH_TOKEN": "XXXX",
    "TWILIO_FROM_NUMBER": "XXXX",
    "TWILIO_WEBHOOK_URL": "https://nimblers.co/api/webhooks/twilio",
    "ANTHROPIC_API_KEY": "XXXX"
  },

  "ai": {
    "binding": "AI"
  },

  "routes": [
    {
      "pattern": "nimblers.co",
      "custom_domain": true
    }
  ]
}
